@{
    ViewData["Title"] = "Quadrants";
}

<h1>@ViewData["Title"]</h1>

<div class="container">
    <div class="row">
        <div class="col-6">
            <h1>Q1</h1>
            <h2>Important/Urgent</h2>
            <ul>
                @foreach (var task in Model.Where(x => x.QuadrantNumber == 1 && !x.Completed))
                {
                <li>@x.Task</li>
                <li>@x.DueDate</li>
                
                }
            </ul>
        </div>
        <div class="col-6">
            <h1>Q2</h1>
            <h2>Important/Not Urgent</h2>
            <ul>
                @foreach (var task in Model.Where(x => x.QuadrantNumber == 2 && !x.Completed))
                {
                <li>@x.Task</li>
                <li>@x.DueDate</li>

                }
            </ul>
        </div>
    </div>

    <div class="row">
        <div class="col-6">
            <h1>Q3</h1>
            <h2>Not Important/Urgent</h2>
            <ul>
                @foreach (var task in Model.Where(x => x.QuadrantNumber == 3 && !x.Completed))
                {
                <li>@x.Task</li>
                <li>@x.DueDate</li>
                }
            </ul>
        </div>
        <div class="col-6">
            <h1>Q4</h1>
            <h2>Not Important/Not Urgent</h2>
            <ul>
                @foreach (var task in Model.Where(x => x.QuadrantNumber == 4 && !x.Completed))
                {
                <li>@x.Task</li>
                <li>@x.DueDate</li>
                }
            </ul>
        </div>
    </div>
</div>
