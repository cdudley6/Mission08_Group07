
@{
    ViewData["Title"] = "Add/Edit Tasks";
}
@model Mission08_Group07.Models.NewTask

<h1>@ViewData["Title"]</h1>

<div>
    <form method="post">
        <label asp-for="Task">Task Name</label>
        <input asp-for="Task" />
        <label asp-for="Due_Date">Due Date</label>
        <input asp-for="Due_Date" />
        <label asp-for="Quadrant">Quadrant</label>
        <select asp-for="Quadrant">
            <option value="Q1">Quadrant 1</option>
            <option value="Q2">Quadrant 2</option>
            <option value="Q3">Quadrant 3</option>
            <option value="Q4">Quadrant 4</option>
        </select>
        <label asp-for="CategoryID">Category</label>
        <select>
            @foreach (Category c in ViewBag.Categories)
            {
                <option value="@c.CategoryID">@c.CategoryName</option>
            }
        </select>
        <label asp-for="Completed">Completed?</label>
        <select asp-for="Completed">
            <option value="True">Yes</option>
            <option value="False">No</option>
        </select>
        <button type="submit">Submit</button>
        <div asp-validation-summary="All"></div>
    </form>
    </div>

